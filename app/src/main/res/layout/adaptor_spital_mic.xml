<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/albastru_blu">

    <TextView
        android:id="@+id/textView_nume_spital_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:text="Nume"
        app:layout_constraintStart_toEndOf="@+id/imageView_poza_spital_mic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_adresa_spital_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:text="Adresa"
        app:layout_constraintStart_toEndOf="@+id/imageView_poza_spital_mic"
        app:layout_constraintTop_toBottomOf="@+id/textView_telefon_spital_mic" />

    <TextView
        android:id="@+id/textView_distanta_spital_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:text="Distanta"
        app:layout_constraintStart_toEndOf="@+id/imageView_poza_spital_mic"
        app:layout_constraintTop_toBottomOf="@+id/textView_adresa_spital_mic" />

    <TextView
        android:id="@+id/textView_telefon_spital_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:text="Telefon"
        app:layout_constraintStart_toEndOf="@+id/imageView_poza_spital_mic"
        app:layout_constraintTop_toBottomOf="@+id/textView_nume_spital_mic" />

    <ImageView
        android:id="@+id/imageView_poza_spital_mic"
        android:layout_width="115dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_invib"
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_distanta_spital_mic" />

</androidx.constraintlayout.widget.ConstraintLayout>